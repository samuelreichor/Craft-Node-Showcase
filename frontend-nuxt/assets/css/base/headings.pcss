/*
 |--------------------------------------------------------------------------
 |  Headings
 |--------------------------------------------------------------------------
 */

.headline-root,
h1,
h2,
h3,
h4,
h5,
h6 {
  @apply font-semibold font-sans;
}

.h1-styling,
h1 {
  @apply text-8xl;
}

.h2-styling,
h2 {
  @apply text-6xl;
}

.h3-styling,
h3 {
  @apply text-4xl;
}

.h4-styling,
h4 {
  @apply text-3xl;
}

.h5-styling,
h5 {
  @apply text-2xl;
}

.h6-styling,
h6 {
  @apply text-xl;
}
