/*
 |--------------------------------------------------------------------------
 |  Headings
 |--------------------------------------------------------------------------
 */

h1,
h2,
h3,
h4,
h5,
h6 {
  @apply font-sans;
}

h1 {
  @apply md:text-6xl text-7xl md:font-medium;
  line-height: 1.05;
}

h2 {
  @apply text-4xl font-semibold;
  line-height: 1.1;
}

h3 {
  @apply text-lg font-semibold;
}

h4 {
  @apply text-base;
}

h5 {
  @apply text-base;
}

h6 {
  @apply text-base;
}
