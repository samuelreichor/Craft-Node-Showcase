{
  "name": "samuel-reichoer/craft-noder",
  "description": "A plugin that speeds up development in headless mode with js frameworks",
  "type": "craft-plugin",
  "license": "mit",
  "support": {
    "email": "samuelreichor@gmail.com",
    "issues": "https://github.com/samuelreichor/craft-noder/issues?state=open",
    "source": "https://github.com/samuelreichor/craft-noder",
    "docs": "https://github.com/samuelreichor/craft-noder",
    "rss": "https://github.com/samuelreichor/craft-noder/releases.atom"
  },
  "require": {
    "php": ">=8.2",
    "craftcms/cms": "^5.0.0",
    "craftcms/element-api": "4.1.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "samuelreichoer\\craftnoder\\": "src/"
    }
  },
  "extra": {
    "handle": "craft-noder",
    "name": "craft-noder",
    "developer": "Samuel Reich√∂r",
    "documentationUrl": "https://github.com/samuelreichor/craft-noder",
    "class": "samuelreichoer\\craftnoder\\Noder"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
